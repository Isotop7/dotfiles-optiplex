# Set environment variables
export LANG=de_DE.UTF-8
export TERM=rxvt-unicode-256color
#env > ~/env.log

# Disable screensaver and tty bell
xset -dpms s off
xset -b b off

# Start polybar
polybar -c ~/.config/polybar/config.ini main &

# Set background
feh --bg-center ~/Pictures/firewatch.png

# Start rxvt-unicode daemon
/usr/bin/urxvtd -o >> ~/logs/urxvtd.log &

# Fork autocutsel
autocutsel -f
